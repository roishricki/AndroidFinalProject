<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipesapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecipesApplication">
        <activity
            android:name=".activites.FilterByIngredientsActivity"
            android:exported="false" />
        <activity
            android:name=".activites.DisplayRecipeActivity"
            android:exported="false" />
        <activity
            android:name=".activites.MyAppRecipeMenuActivity"
            android:exported="false" />
        <activity
            android:name=".activites.CreateRecipeActivity"
            android:exported="false" />
        <activity
            android:name=".activites.MyImgActivity"
            android:exported="false" />
        <activity
            android:name=".activites.MyLinksActivity"
            android:exported="false" />
        <activity
            android:name=".activites.IngredientActivity"
            android:exported="false" />
        <activity
            android:name=".activites.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>