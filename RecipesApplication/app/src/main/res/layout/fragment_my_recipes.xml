<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.myRecipesFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/recipe_cardview"
        card_view:cardBackgroundColor="#58D189"
        android:layout_marginTop="40px"
        android:layout_marginBottom="40px"
        card_view:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#FB906E">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/textViewItemNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#FB906E"
                    card_view:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/textViewNameRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:text="Recipe Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textSize="32sp"
                    card_view:fontFamily="@font/poppins_medium" />

            </LinearLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>